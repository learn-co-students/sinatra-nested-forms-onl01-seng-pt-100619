<h1>Pirates</h1>
<div class="pirate">
  <p>Name: <%= @pirate.name %></p><br>
  <p>Weight: <%= @pirate.weight %></p><br>
  <p>Height: <%= @pirate.height %></p><br>
</div><br>

<h1>Ships</h1>
<% @ships.each do |ship| %>
<div class="ship">
  <p>Name: <%= ship.name %></p><br>
  <p>Weight: <%= ship.type %></p><br>
  <p>Height: <%= ship.booty %></p>
</div><br>
<% end %>
